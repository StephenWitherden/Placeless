<Window x:Class="Placeless.App.Windows.FlickrSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Placeless.App.Windows"
        mc:Ignorable="d"
        Title="FlickrSettings" SizeToContent="Height" Width="300">
    <StackPanel>
        <CheckBox Margin="5,5,5,5" VerticalAlignment="Center" x:Name="cbFlickrEnabled">Enable Flickr Load</CheckBox>
        <Button Margin="10,5,10,5" VerticalAlignment="Center" x:Name="btnResetToken" Click="btnResetToken_Click" >Reset Flickr Token</Button>

        <Grid Margin="5,15,5,5" >
            <Button x:Name="btnOK" IsDefault="True" Content="OK" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" RenderTransformOrigin="0.891,1.511" Click="btnOK_Click" />
            <Button x:Name="btnCancel" IsCancel="True" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,94,10" VerticalAlignment="Bottom" Width="75" RenderTransformOrigin="0.891,1.511"/>
        </Grid>
    </StackPanel>

</Window>
