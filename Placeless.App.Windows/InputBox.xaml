<Window x:Class="Placeless.App.Windows.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Placeless.App.Windows"
        mc:Ignorable="d"
        Title="InputBox" Width="300" MinHeight="100" SizeToContent="Height">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="20px" />
            <RowDefinition Height="20px" />
        </Grid.RowDefinitions>
        <TextBlock  Grid.Row="0" x:Name="lblInput" TextWrapping="Wrap">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. </TextBlock>
        <TextBox x:Name="txtInput"  Grid.Row="1" Height="20"></TextBox>
        <Grid Grid.Row="2" Height="30">
            <Button IsDefault="True" Content="OK" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" RenderTransformOrigin="0.891,1.511" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
